<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>
<div style="padding-bottom: 2rem">
<%= link_to "Add New task", new_task_path, class: "btn btn-dark" %>
</div>
<div id="tasks">

  <% @tasks.each do |task| %>
  <div class='card' style='background: pink; width: 18rem; padding: 2rem; '>
    <%= render task %>
  </div>
 
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>

</div>


